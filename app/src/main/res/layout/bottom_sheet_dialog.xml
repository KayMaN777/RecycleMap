                android:textAlignment="center"
                android:textColor="@color/colorNull"
                android:layout_weight="31">
            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10">
            </TextView>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/Fraction8"
                android:layout_weight="30">
            </ImageView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/FractionText8"
                android:textAlignment="center"
                android:textColor="@color/colorNull"
                android:layout_weight="31">
            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:id="@+id/fractions_layout3"
            android:layout_below="@id/fractions_layout2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10">
            </TextView>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/Fraction9"
                android:layout_weight="30">
            </ImageView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/FractionText9"
                android:textAlignment="center"
                android:textColor="@color/colorNull"
                android:layout_weight="31">
            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10">
            </TextView>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
