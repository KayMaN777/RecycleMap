                android:layout_height="wrap_content"
                android:id="@+id/FractionText5"
                android:textColor="@color/colorNull"
                android:textAlignment="center"
                android:layout_weight="31">
            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
